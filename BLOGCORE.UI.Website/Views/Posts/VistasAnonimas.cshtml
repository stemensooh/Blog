@model List<BLOGCORE.APPLICATION.Core.DTOs.UsuarioDto>

<br />
<br />
<br />
<div class="text-center row">
    <div class="col-sm-offset-5">

    </div>
    <div class="col-sm-6">
        <h4 class="">Vistas Anónimas</h4>
    </div>
</div>
@if (Model is null)
{
    <p>No hay vistas</p>
}
else
{
    <table id="table-usuario" class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Ip</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Perfil" asp-action="Index" asp-route-username="@item.Username">@item.Username</a>
                    </td>
                    <td>@item.Ip</td>
                    <td>@item.FechaVista</td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#table-usuario').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json'
                },
                order: [
                    [2, 'desc']
                ]
            });
        });
    </script>

}